<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>Mercado</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- 1 - Produto  -->	
	<servlet>
	<servlet-name>produto</servlet-name>
	<servlet-class>br.com.servlet.ProdutoServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>produto</servlet-name>
	<url-pattern>/produto</url-pattern>
	</servlet-mapping>
	
	<!-- 2 - cliente  -->	
	<servlet>
	<servlet-name>cliente</servlet-name>
	<servlet-class>br.com.servlet.ClienteServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>cliente</servlet-name>
	<url-pattern>/cliente</url-pattern>
	</servlet-mapping>
	
	<!-- 3 - login  -->	
	<servlet>
	<servlet-name>login</servlet-name>
	<servlet-class>br.com.servlet.LoginServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>login</servlet-name>
	<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<!-- 4 - venda  -->	
	<servlet> 
	<servlet-name>venda</servlet-name>
	<servlet-class>br.com.servlet.VendaServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>venda</servlet-name>
	<url-pattern>/venda</url-pattern>
	</servlet-mapping>


</web-app>